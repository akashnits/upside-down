{
  "manifest_version": 3,
  "name": "Upside Down - Resume Assistant",
  "version": "1.0",
  "description": "Analyze LinkedIn jobs against your resume",
  "permissions": ["activeTab"],
  "host_permissions": ["https://script.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
